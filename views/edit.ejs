    <%- include('header.ejs', { title: 'Edit Ausbildungplan' }) %>
  <h1>Edit Ausbildungplan</h1>
  <form action="/ausbildungPlan/<%= plan.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <label for="azubi">Azubi:</label>
    <input type="text" id="azubi" name="azubi" value="<%= plan.title %>" required>
    <br>
    <label for="ausbildungBeginn">Ausbildung Beginn:</label>
    <input type="date" id="ausbildungBeginn" name="ausbildungBeginn" value="<%= plan.date %>" required>
    <br>
    <label for="ausbildungsberuf">Ausbildungsberuf:</label>
    <input type="text" id="ausbildungsberuf" name="ausbildungsberuf" value="<%= plan.description %>" required>
    <br>
    <input type="submit" value="Update">
  </form>

  <h2>Add New Detail</h2>
  <form action="/ausbildungPlan/<%= plan.id %>/details" method="post">
    <label for="laufnummer">Laufnummer:</label>
    <input type="text" id="laufnummer" name="laufnummer" required>
    <br>
    <label for="abschnitt">Abschnitt:</label>
    <input type="text" id="abschnitt" name="abschnitt" required>
    <br>
    <label for="beschreibung">Beschreibung Teil der Ausbildung:</label>
    <textarea id="beschreibung" name="beschreibung" required></textarea>
    <br>
    <label for="beispiele">Beispiele:</label>
    <textarea id="beispiele" name="beispiele" required></textarea>
    <br>
    <label for="lehrjahr">Lehrjahr:</label>
    <input type="text" id="lehrjahr" name="lehrjahr" required>
    <br>
    <label for="zeitraumVon">Zeitraum von:</label>
    <input type="date" id="zeitraumVon" name="zeitraumVon" required>
    <br>
    <label for="zeitraumBis">Zeitraum bis:</label>
    <input type="date" id="zeitraumBis" name="zeitraumBis" required>
    <br>
    <label for="abteilung">Durchführende Abteilung:</label>
    <input type="text" id="abteilung" name="abteilung" required>
    <br>
    <label for="mitarbeiter">Durchführende Mitarbeiter:</label>
    <input type="text" id="mitarbeiter" name="mitarbeiter" required>
    <br>
    <input type="submit" value="Add Detail">
  </form>

  <h2>Existing Details</h2>
  <table>
    <thead>
      <tr>
        <th>Laufnummer</th>
        <th>Abschnitt</th>
        <th>Beschreibung</th>
        <th>Beispiele</th>
        <th>Lehrjahr</th>
        <th>Zeitraum von</th>
        <th>Zeitraum bis</th>
        <th>Abteilung</th>
        <th>Mitarbeiter</th>
      </tr>
    </thead>
    <tbody>
      <% details.forEach(detail => { %>
        <tr>
          <td><%= detail.laufnummer %></td>
          <td><%= detail.abschnitt %></td>
          <td><%= detail.beschreibung %></td>
          <td><%= detail.beispiele %></td>
          <td><%= detail.lehrjahr %></td>
          <td><%= detail.zeitraumVon %></td>
          <td><%= detail.zeitraumBis %></td>
          <td><%= detail.abteilung %></td>
          <td><%= detail.mitarbeiter %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
